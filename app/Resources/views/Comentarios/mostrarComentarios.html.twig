{% extends '::base.html.twig' %}

{% block body %}
    <div>
        <form method="post" action="{{ action }}" novalidate="novalidate"><!-- para evitar la validacion html5 -->
            <div>
                {{ dump (form.vars.value) }}

                <ul>
                    <!-- para mostrar los errores del formulario -->
                    {% for error in form.vars.errors %}
                        <li>{{ error.message }}</li>
                    {% endfor %}
                </ul>
            </div>
            <div>{{ form_label(form.mensaje) }}: {{ form_widget(form.mensaje) }}</div>
            {{ form_rest(form) }}
            <div>
                <button class="btn-basic" type="submit" value="submit">AÃ±adir</button>
            </div>


        </form>
    </div>
{% endblock %}