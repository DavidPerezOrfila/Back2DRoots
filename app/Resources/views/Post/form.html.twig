{% extends '::base.html.twig' %}

{% block body %}
  <div>
    <form method="post" action="{{ action }}" novalidate="novalidate" enctype="multipart/form-data">
      <!-- para evitar la validacion html5 -->

      <div class="btn-primary rounded">{{ form_errors(form.titulo) }}{{ form_label(form.titulo) }}:
        {{ form_widget(form.titulo) }}</div>
      <div class="btn-success">{{ form_label(form.mensaje) }}:
        {{ form_widget(form.mensaje) }}</div>
      {{ form_rest(form) }}
      <div class="btn-base">{{ form_label(form.categoria) }}:
        {{ form_widget(form.categoria) }}</div>
      {{ form_rest(form) }}
      <div>

        <button class="btn-basic rounded" type="submit" value="submit">AÃ±adir</button>
      </div>
    </form>
  </div>

{% endblock %}
