{% extends '::base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="col-lg-12 box-form">
            <h2>Usuarios registrados</h2>
            <div class="count">
                <span class="label label-primary">
                   total de personas: {{ users.getTotalItemCount() }}
                </span>
            </div>
            <hr>
            <div class="box-content box-form">
                <div class="avatar">
                {% for u in users %}
                    {% if u.imageFile == null %}
                        <img src="{{ asset('/uploads/media/unicorn.png') }}" class="img-circle img-responsive">
                    {% else %}
                        <img src="{{ asset('/uploads/media/'~ u.image) }}" class="img-circle img-responsive">
                    {% endif %}
                    <label><h4>{{ u.username }}</h4></label>
                    <hr>
                </div>
                {% endfor %}

            </div>
        </div>
    </div>
{% endblock %}

